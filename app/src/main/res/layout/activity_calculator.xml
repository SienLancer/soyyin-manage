<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_soyyin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <!-- Biểu thức đang nhập -->
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text=""
        android:textSize="20sp"
        android:padding="8dp"/>

    <!-- Bàn phím -->
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="5"
        android:layout_marginTop="20dp">

        <!-- Hàng 1 -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btnDiv" android:text="÷" style="@style/CalcBtn" app:layout_columnWeight="1"/>

        <!-- Hàng 2 -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btnMul" android:text="×" style="@style/CalcBtn" app:layout_columnWeight="1"/>

        <!-- Hàng 3 -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btnSub" android:text="-" style="@style/CalcBtn" app:layout_columnWeight="1"/>

        <!-- Hàng 4 -->
        <Button android:id="@+id/btn0" android:text="0" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btnDot" android:text="." style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btnEqual" android:text="=" style="@style/CalcBtn" app:layout_columnWeight="1"/>
        <Button android:id="@+id/btnAdd" android:text="+" style="@style/CalcBtn" app:layout_columnWeight="1"/>

        <!-- Hàng 5: nút Clear chiếm 4 cột -->
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            style="@style/CalcBtn"
            android:backgroundTint="#FF5252"
            android:textColor="@android:color/white"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"/>
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>
